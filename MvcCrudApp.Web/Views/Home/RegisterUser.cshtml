@model WebApp.Domain.Entities.User

@{
    ViewData["Title"] = "Register User";
}

<div class="container mt-4">
    <h2>Create User</h2>
    <form asp-action="RegisterUser" method="post" class="needs-validation">

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">User Name</label>
                        <input asp-for="UserName" class="form-control" required />
                        <div class="invalid-feedback">Please enter a user name.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Role" class="form-label">Role</label>
                        <input asp-for="Role" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastLogin" class="form-label">Last Login</label>
                        <input asp-for="LastLogin" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="FName" class="form-label">First Name</label>
                        <input asp-for="FName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="LName" class="form-label">Last Name</label>
                        <input asp-for="LName" class="form-control" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Department" class="form-label">Department</label>
                        <input asp-for="Department" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="DOJ" class="form-label">Date of Joining</label>
                        <input asp-for="DOJ" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="MgrId" class="form-label">Manager ID</label>
                        <input asp-for="MgrId" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Seniority" class="form-label">Seniority</label>
                        <input asp-for="Seniority" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="EmpCode" class="form-label">Employee Code</label>
                        <input asp-for="EmpCode" class="form-control" required />
                        <div class="invalid-feedback">Please enter an employee code.</div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="Password" class="form-label">Password (Mandatory): </label>
                    <input asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
