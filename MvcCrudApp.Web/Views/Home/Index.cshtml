@model WebApp.Domain.Entities.User

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Login
                </div>
                <div class="card-body">
                    <form asp-action="LoginUser" method="post" class="needs-validation">

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username:</label>
                            <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Enter your username">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" for="password" class="form-label">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter your password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-controller="Home" asp-action="RegisterUser" class="btn btn-success">Register User </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>