@model WebApp.Domain.Entities.SearchParameter

@{
    ViewBag.Title = "Search Parameters Entry";
}

<div class="container mt-5">
    <h2 class="mb-4">Search Parameters Entry Screen</h2>

    <form asp-controller="Search" asp-action="SubmitEntry" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Username -->
            <div class="col-md-6 mb-3">
                <label asp-for="Username" class="form-label">Username (Mandatory): </label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Fieldname -->
            <div class="col-md-6 mb-3">
                <label asp-for="Fieldname" class="form-label">Fieldname (Mandatory): </label>
                <input asp-for="Fieldname" class="form-control" required />
                <span asp-validation-for="Fieldname" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Datatype -->
            <div class="col-md-6 mb-3">
                <label asp-for="Datatype" class="form-label">Datatype (Mandatory): </label>
                <select asp-for="Datatype" class="form-select" required>
                    <option value="numeric">Numeric</option>
                    <option value="float">Float</option>
                    <option value="datetime">Datetime</option>
                    <option value="string">String</option>
                </select>
                <span asp-validation-for="Datatype" class="text-danger"></span>
            </div>

            <!-- ControlType -->
            <div class="col-md-6 mb-3">
                <label asp-for="ControlType" class="form-label">ControlType (Mandatory): </label>
                <select asp-for="ControlType" class="form-select" required>
                    <option value="textbox">Textbox</option>
                    <option value="dropdownlist">Dropdownlist</option>
                    <option value="numericTextbox">Numeric Textbox</option>
                    <option value="datetimeField">Datetime Field</option>
                </select>
                <span asp-validation-for="ControlType" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Constraint -->
            <div class="col-md-6 mb-3">
                <label asp-for="Constraint" class="form-label">Constraint (Mandatory): </label>
                <input asp-for="Constraint" class="form-control" required />
                <span asp-validation-for="Constraint" class="text-danger"></span>
            </div>

            <!-- MaxLength -->
            <div class="col-md-6 mb-3">
                <label asp-for="MaxLength" class="form-label">MaxLength (Optional): </label>
                <input asp-for="MaxLength" type="number" class="form-control" />
                <span asp-validation-for="MaxLength" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Min Limit -->
            <div class="col-md-4 mb-3">
                <label asp-for="MinLimit" class="form-label">Min Limit (Optional): </label>
                <input asp-for="MinLimit" type="number" class="form-control" />
                <span asp-validation-for="MinLimit" class="text-danger"></span>
            </div>

            <!-- Max Limit -->
            <div class="col-md-4 mb-3">
                <label asp-for="MaxLimit" class="form-label">Max Limit (Optional): </label>
                <input asp-for="MaxLimit" type="number" class="form-control" />
                <span asp-validation-for="MaxLimit" class="text-danger"></span>
            </div>

            <!-- MaskPattern -->
            <div class="col-md-4 mb-3">
                <label asp-for="MaskPattern" class="form-label">MaskPattern (Optional): </label>
                <input asp-for="MaskPattern" class="form-control" />
                <span asp-validation-for="MaskPattern" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>